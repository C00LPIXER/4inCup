rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Tournament data - allow read/write for everyone
    match /tournaments/{tournamentId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Test tournament data - allow read/write for everyone
    match /test_tournaments/{tournamentId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Settings/auth data - allow read/write for everyone
    match /settings/{document} {
      allow read: if true;
      allow write: if true;
    }
  }
}
